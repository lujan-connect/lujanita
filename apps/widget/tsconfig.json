{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": ["steps/**/*.ts", "src/**/*.ts", "src/**/*.tsx", "test-utils/**/*.ts"]
}
